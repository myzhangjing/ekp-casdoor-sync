<Window x:Class="SyncEkpToCasdoor.UI.ErrorLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="错误" Height="450" Width="650"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="应用程序发生错误 (已保存到日志文件):"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,10"/>

        <TextBox Grid.Row="1"
                 x:Name="ErrorTextBox"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
            <Button Content="复制错误信息" 
                    Click="CopyButton_Click"
                    Padding="15,5"
                    Margin="0,0,10,0"/>
            <Button Content="打开日志文件夹" 
                    Click="OpenFolderButton_Click"
                    Padding="15,5"
                    Margin="0,0,10,0"/>
            <Button Content="关闭" 
                    Click="CloseButton_Click"
                    Padding="15,5"/>
        </StackPanel>

        <TextBlock Grid.Row="3"
                   x:Name="LogPathTextBlock"
                   FontSize="10"
                   Foreground="Gray"/>
    </Grid>
</Window>

@page "/admin-login"
@using SyncEkpToCasdoor.Web.Components.Layout
@layout EmptyLayout

<PageTitle>特权登录 - SyncEkpToCasdoor</PageTitle>

<div class="login-container">
    <div class="login-box">
        <div class="text-center mb-4">
            <h2>🔐 特权管理员登录</h2>
            <p class="text-muted">EKP-Casdoor 同步管理系统</p>
        </div>

        <div class="card">
            <div class="card-body">
                <form id="adminLoginForm" onsubmit="return handleAdminLogin(event);">
                    <div class="mb-3">
                        <label class="form-label">用户名</label>
                        <input type="text" class="form-control" id="username" placeholder="输入用户名" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">特权密码</label>
                        <input type="password" class="form-control" id="password" placeholder="输入特权密码" required />
                        <div class="form-text text-muted small">
                            提示: sosy3080@sohu.com
                        </div>
                    </div>
                    <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>
                    <div id="successMessage" class="alert alert-success d-none" role="alert"></div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger btn-lg" id="submitBtn">
                            <span class="spinner-border spinner-border-sm me-2 d-none" id="spinner"></span>
                            <i class="bi bi-shield-lock-fill"></i>
                            <span>特权登录</span>
                        </button>
                    </div>
                </form>
                
                <div class="mt-3 text-center">
                    <small class="text-muted">
                        仅供系统管理员使用
                    </small>
                </div>
                
                <hr class="my-3" />
                
                <div class="text-center">
                    <a href="/login" class="text-primary">
                        <i class="bi bi-arrow-left"></i>
                        返回普通登录
                    </a>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <small class="text-muted">
                此登录方式绕过SSO认证，请谨慎使用
            </small>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        padding: 20px;
    }

    .login-box {
        width: 100%;
        max-width: 450px;
    }

    .login-box h2 {
        color: white;
        font-weight: 600;
    }

    .login-box .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 2rem;
    }

    .btn-danger {
        border-radius: 8px;
        padding: 12px;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-danger:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }
    
    .alert {
        border-radius: 10px;
    }
</style>

<script>
    async function handleAdminLogin(event) {
        event.preventDefault();
        
        const submitBtn = document.getElementById('submitBtn');
        const spinner = document.getElementById('spinner');
        const errorMsg = document.getElementById('errorMessage');
        const successMsg = document.getElementById('successMessage');
        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;
        
        // 显示加载状态
        submitBtn.disabled = true;
        spinner.classList.remove('d-none');
        errorMsg.classList.add('d-none');
        successMsg.classList.add('d-none');
        
        try {
            const response = await fetch('/api/admin-login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'include', // 重要: 确保Cookie被设置
                body: JSON.stringify({
                    username: username,
                    password: password
                })
            });

            const data = await response.json();
            
            if (response.ok && data.success) {
                successMsg.textContent = data.message || '登录成功！正在跳转...';
                successMsg.classList.remove('d-none');
                
                // 延迟跳转让用户看到成功消息
                setTimeout(() => {
                    window.location.href = '/';
                }, 500);
            } else {
                errorMsg.textContent = data.message || '登录失败';
                errorMsg.classList.remove('d-none');
                submitBtn.disabled = false;
                spinner.classList.add('d-none');
            }
        } catch (error) {
            console.error('Admin login error:', error);
            errorMsg.textContent = '网络错误: ' + error.message;
            errorMsg.classList.remove('d-none');
            submitBtn.disabled = false;
            spinner.classList.add('d-none');
        }
        
        return false;
    }
</script>


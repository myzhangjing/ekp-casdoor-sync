@page "/login"
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authentication.Cookies
@using SyncEkpToCasdoor.Web.Components.Layout
@inject NavigationManager Navigation
@inject IJSRuntime JS
@layout EmptyLayout

<PageTitle>登录 - SyncEkpToCasdoor</PageTitle>

<div class="login-container">
    <div class="login-box">
        <div class="text-center mb-4">
            <h2>🔐 系统登录</h2>
            <p class="text-muted">EKP-Casdoor 同步管理系统</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                <strong>登录失败：</strong> @errorMessage
            </div>
        }

        <div class="card">
            <div class="card-body">
                <div class="d-grid">
                    <a href="/challenge" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i>
                        <span>通过 Casdoor 登录</span>
                    </a>
                </div>

                <div class="mt-3 text-center">
                    <small class="text-muted">
                        点击登录后将跳转到 Casdoor 认证服务器
                    </small>
                </div>
                
                <div class="mt-4">
                    <hr>
                    <div class="d-grid">
                        <a href="/admin-login" class="btn btn-outline-warning btn-lg">
                            <i class="bi bi-shield-lock-fill"></i>
                            <span>特权管理员登录</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <small class="text-muted">
                登录即表示您同意遵守系统使用规范
            </small>
        </div>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .login-box {
        width: 100%;
        max-width: 450px;
    }

    .login-box h2 {
        color: white;
        font-weight: 600;
    }

    .login-box .text-muted {
        color: rgba(255, 255, 255, 0.8) !important;
    }

    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 2rem;
    }

    .btn-primary {
        border-radius: 8px;
        padding: 12px;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }

    .alert-info {
        background-color: #e7f3ff;
        border-color: #b3d9ff;
        color: #004085;
    }
</style>

@code {
    private string errorMessage = "";

    protected override void OnInitialized()
    {
        // 从查询参数获取错误信息
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("error", out var error))
        {
            errorMessage = error.ToString();
        }
    }
}
